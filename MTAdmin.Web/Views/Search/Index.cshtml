<section class="content-header">
    <div class="container-fluid">
        <h2 class="text-center display-4">Search...</h2>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label>Categories:</label>
                            <select class="form-control select2bs4" data-placeholder="Select a Categories" style="width: 100%;" id="categories" multiple>
                                <option>Text only</option>
                                <option>Images</option>
                                <option>Video</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Tags:</label>
                            <select class="form-control select2bs4" data-placeholder="Select a Tags" style="width: 100%;" id="tags" multiple>
                                <option selected>Title</option>
                                <option>Date</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Sort By:</label>
                            <select class="form-control select2bs4" data-placeholder="Sort By" id="sortBy" style="width: 100%;">
                                <option selected>Latest</option>
                                <option>Treanding</option>
                                <option>Name</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-lg">
                        <input type="search" class="form-control form-control-lg" placeholder="Type your keywords here">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-lg btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-10 offset-md-1">
                <div class="list-group">
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script>        
        var page = 0;
        var _inCallback = false;
        var currentscrollHeight = 0;

        const getTempaltes = function () {
            if (page > -1 && !_inCallback) {
                _inCallback = true;
                page++;

                $.ajax({
                    type: 'POST',
                    url: '/search',
                    data: {
                        CategoryId: '',
                        FilterBy: '',
                        PageNumber: page,
                        Query: ''
                    },
                    success: function (response) {
                        if (response != '') {
                            $('.list-group').append(response);
                        }
                        else {
                            page = -1;
                        }
                        _inCallback = false;
                    }
                });
            }
        }
    </script>
}