@model LoginVm
@{
    Layout = "~/Areas/Archone/Views/Shared/_LoginPageLayout.cshtml";
}
<div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>Hello there!!</b></a>
        </div>
        <div class="card-body">
            @*<p class="login-box-msg">Login to start your session</p>*@
            <div asp-validation-summary="All"></div>
            <form asp-controller="Auth" asp-action="Index" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="error invalid-feedback"></span>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="error invalid-feedback"></span>
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>
